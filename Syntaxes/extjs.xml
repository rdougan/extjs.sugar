<syntax name="js.extjs">
  <zones>
    <!-- Ext.* -->
    <zone name="extjs.object">
      <starts-with>
        <expression>(Ext)(.)([a-zA-Z]*)(\()</expression>
        <capture number="1" name="extjs.function" />
        <capture number="2" name="delimiter.js.period" />
        <capture number="3" name="extjs.class" />
        <capture number="4" name="delimiter.js.period" />
        <capture number="5" name="delimiter.js.parenthesis.open" />
      </starts-with>
      <ends-with>
        <expression>\)</expression>
        <capture number="0" name="delimiter.js.parenthesis.close" />
      </ends-with>
      <subzones>
        <include syntax="sourcecode.js" zone="js" />
      </subzones>
    </zone>
    
    <!-- new Ext.* -->
    <zone name="extjs.object.new">
      <starts-with>
        <expression>(new)(\s)(Ext)(.)([a-zA-Z]*)(\()</expression>
        <capture number="1" name="keyword.operator.new" />
        <capture number="3" name="extjs.function" />
        <capture number="4" name="delimiter.js.period" />
        <capture number="5" name="extjs.class" />
        <capture number="6" name="delimiter.js.period" />
        <capture number="7" name="delimiter.js.parenthesis.open" />
      </starts-with>
      <ends-with>
        <expression>\)</expression>
        <capture number="0" name="delimiter.js.parenthesis.close" />
      </ends-with>
      <subzones>
        <include syntax="sourcecode.js" zone="js" />
      </subzones>
    </zone>
  </zones>
</syntax>
